<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Login</title>
  <link rel="stylesheet" href="styles/login.css">
</head>

<body>

  <%- include('partials/nav') %>

    <div class="login-from">
      <form action="/admin-login" method="post">
        <div class="container">
          <h1>Admin Login</h1>
          <div id="hl">
            <label for="email"><b>Email</b></label>
            <input type="text" placeholder="Enter Email" name="email" id="email" required>
            <br />
            <label for="password"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="password" id="password" required>
            <br />
            <button type="submit" class="loginbtn btn">
              <h3>Login</h3>
            </button>
            <h3>Don't have an account? <a href="/">Register</a></h3>
          </div>
        </div>
      </form>
    </div>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Lato:wght@300&family=Lobster&display=swap');

      body {
        background-image: url("/media/img5.webp");
        /* background-size: cover ; */


      }
      .container{
        background-image: url("/media/img7.webp")

      }

      #hl {
        color: rgb(255, 255, 255);
        font-weight: bold;
        font-size: 17px;
        font-family: 'Lobster', cursive;
      }
      h1{
      color: rgb(255, 255, 255);
      font-family: 'Lobster', cursive;
      
    }
    </style>
</body>

</html>